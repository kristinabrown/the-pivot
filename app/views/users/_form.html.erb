<div class="stitched">
  <%= form_for(@user, url: users_path, multipart: true) do |f| %>

    <%= f.label :fullname %>
    <%= f.text_field :fullname %>

    <%= f.label :display_name %>
    <%= f.text_field :display_name %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :avatar %>
    <%= f.file_field :avatar %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <%= f.label :phone %>
    <%= f.text_field :phone %>

    <%= f.label :street %>
    <%= f.text_field :street%>

    <%= f.label :apt_number %>
    <%= f.text_field :apt_number%>

    <%= f.label :city %>
    <%= f.text_field :city%>

    <%= f.label :state %>
    <%= f.text_field :state%>

    <%= f.label :zipcode %>
    <%= f.text_field :zipcode%>

    <%= f.label :credit_card %>
    <%= f.text_field :credit_card%>

   <%= f.label :credit_card_expiration_date %>
   <%= f.date_select :cc_expiration_date, start_year:Date.today.year, end_year: Date.today.year + 10, discard_day: true %>

    <%= f.submit "Submit" %>

  <% end %>

</div>
