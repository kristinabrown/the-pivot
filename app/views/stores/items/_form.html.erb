<%= form_for @item, url: store_items_path, multipart: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :active %>
  active <%= f.radio_button :active, "true" %>
  retired <%= f.radio_button :active, "false" %><br>

  <%= f.label :starting_price %>
  <%= f.number_field :starting_price %>

  <%= f.label :expiration_date %>
  <%= f.datetime_local_field :expiration_date %>
  
  <%= f.label :attachment %>
  <%= f.file_field :attachment %><br>

  <p>Category:</p>
  <ul >
  <%= f.collection_select(:category_id, @categories.to_a, :id, :name) %>
  </ul>

  <%= f.hidden_field :store_id, value: current_user.store_id %>
  <%= f.submit %>
<% end %>